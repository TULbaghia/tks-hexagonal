<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
   version="4.0">

    <security-role>
        <role-name>Admin</role-name>
    </security-role>
    <security-role>
        <role-name>Customer</role-name>
    </security-role>
    <security-role>
        <role-name>Employee</role-name>
    </security-role>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Customer resources</web-resource-name>
            <url-pattern>/RentAPI</url-pattern>
            <url-pattern>/RentAPI*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Customer</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Customer resources cars</web-resource-name>
            <url-pattern>/CustomerAPI</url-pattern>
            <url-pattern>/ExclusiveCarAPI</url-pattern>
            <url-pattern>/EconomyCarAPI</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Customer</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Employee resources</web-resource-name>
            <url-pattern>/RentAPI</url-pattern>
            <url-pattern>/CustomerAPI</url-pattern>
            <url-pattern>/EmployeeAPI</url-pattern>
            <url-pattern>/ExclusiveCarAPI</url-pattern>
            <url-pattern>/EconomyCarAPI</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Employee</role-name>
        </auth-constraint>
    </security-constraint>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin resources</web-resource-name>
            <url-pattern>/EmployeeAPI</url-pattern>
            <url-pattern>/AdminAPI</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Admin</role-name>
        </auth-constraint>
    </security-constraint>









